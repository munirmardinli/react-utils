{
 "$schema": "https://json.schemastore.org/tsconfig",
 "compilerOptions": {
  "rootDir": "src",
  "outDir": "lib",
  "baseUrl": ".",
  "lib": ["es2020", "dom", "dom.iterable", "esnext", "es6"],
  "target": "es2020",
  "jsx": "react",
  "module": "esnext",
  "moduleResolution": "node",
  "esModuleInterop": true,
  "types": ["node", "jest"],
  "strict": true,
  "allowJs": true,
  "skipLibCheck": true,
  "declaration": true,
  "declarationDir": "lib/types",
  "noEmit": false,
  "forceConsistentCasingInFileNames": true,
  "pretty": true,
  "noImplicitAny": true,
  "removeComments": true,
  "typeRoots": ["node_modules/@types", "src/types.d.ts"]
 },
 "include": ["src/**/*.ts", "dotenv.d.ts"],
 "exclude": ["node_modules", "lib"]
}
